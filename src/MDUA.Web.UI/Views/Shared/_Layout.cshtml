@using MDUA.Facade.Interface
@inject ICompanyFacade CompanyFacade

@{
    // 1. Determine Company Name based on URL or Default to ID 1
    string routeCompany = ViewContext.RouteData.Values["companyName"]?.ToString();
    string displayCompanyName = "MDUA Store"; // Fallback
    
    // You likely need a method in Facade like GetByName(string name)
    // For now, we assume if no route, we load Company ID 1 (The Host)
    var companyObj = CompanyFacade.Get(1); 
    
    if (companyObj != null)
    {
        displayCompanyName = companyObj.CompanyName;
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @displayCompanyName</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <style>
        body {
            background-color: #f4f6f9;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .navbar-brand {
            font-weight: bold;
            color: #0d6efd !important;
        }

        .footer {
            background: #fff;
            border-top: 1px solid #e9ecef;
            margin-top: 50px;
            padding: 30px 0;
        }
    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm sticky-top">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-store me-2"></i>@displayCompanyName
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#publicNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="publicNav">
                <form class="d-flex mx-auto my-2 my-lg-0" style="width: 50%;">
                    <div class="input-group">
                        <input class="form-control border-end-0" type="search" placeholder="Search for products..." aria-label="Search">
                        <button class="btn btn-outline-secondary border-start-0" type="submit"><i class="fas fa-search"></i></button>
                    </div>
                </form>

                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item">
                        <a class="nav-link" href="/Account/Login"><i class="fas fa-sign-in-alt me-1"></i> Login</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer class="footer text-center text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - @displayCompanyName - <a href="#">Privacy</a>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>