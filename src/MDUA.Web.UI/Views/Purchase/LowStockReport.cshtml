@model List<dynamic>
@{
    ViewData["Title"] = "Inventory Status";
    Layout = "_AdminLayout";
    var vendors = ViewBag.Vendors as List<MDUA.Entities.Vendor>;
}

@section Styles {
    <link rel="stylesheet" href="~/css/inventory.css" asp-append-version="true" />
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold mb-0 text-dark">Inventory Status</h2>
        <div class="text-muted small">Monitor stock levels and reorder items</div>
    </div>
</div>

<div class="glass-card p-0 overflow-hidden">
    <div class="table-responsive">
        <table class="table table-hover mb-0 align-middle">
            <thead class="bg-light">
                <tr>
                    <th class="ps-4">Product</th>
                    <th>Variant</th>
                    <th class="text-center">Stock Level</th>
                    <th class="text-center">Reorder Point</th>
                    <th class="text-end pe-4" style="min-width: 180px;">Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        bool isHealthy = item.IsHealthyStock;
                        bool hasPending = item.HasPendingPO;

                        string rowClass = isHealthy ? "healthy-stock-row" : "";
                        string stockTextClass = isHealthy ? "text-success-bold" : "text-danger-bold";

                        <tr class="@rowClass">
                            <td class="ps-4 fw-bold">@item.ProductName</td>
                            <td><span class="badge bg-white text-dark border shadow-sm">@item.VariantName</span></td>

                            <td class="text-center">
                                <span class="@stockTextClass">@item.CurrentStock</span>
                            </td>

                            <td class="text-center text-muted">@item.ReorderLevel</td>

                            <td class="text-end pe-4">
                                @if (hasPending)
                                {
                                    <div class="d-flex gap-2 justify-content-end">
                                        <button class="btn btn-sm btn-info text-white btn-req-info shadow-sm"
                                                title="View Request Details"
                                                data-variant-id="@item.VariantId">
                                            ℹ Info
                                        </button>
                                        <button class="btn btn-sm btn-success btn-receive shadow-sm"
                                                title="Receive Stock"
                                                data-variant-id="@item.VariantId"
                                                data-name="@item.ProductName - @item.VariantName">
                                            📥 Receive
                                        </button>
                                    </div>
                                }
                                else if (!isHealthy)
                                {
                                    <button class="btn btn-sm btn-danger btn-request shadow-sm"
                                            data-variant-id="@item.VariantId"
                                            data-name="@item.ProductName - @item.VariantName"
                                            data-suggested="@item.SuggestedQty">
                                        ⚡ Request Stock
                                    </button>
                                }
                                else
                                {
                                    <button class="btn btn-sm btn-light border btn-request text-muted"
                                            data-variant-id="@item.VariantId"
                                            data-name="@item.ProductName - @item.VariantName"
                                            data-suggested="10">
                                        Request
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr><td colspan="5" class="text-center py-5 text-muted">No inventory items found.</td></tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- 1. Request Modal -->
<div class="modal fade" id="requestModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header border-bottom-0">
                <h5 class="modal-title fw-bold">Create Purchase Request</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="requestForm">
                    <input type="hidden" id="reqVariantId">
                    <div class="mb-3">
                        <label class="form-label text-muted small fw-bold">Product Variant</label>
                        <input type="text" class="form-control bg-light" id="reqProductName" readonly>
                    </div>
                    <div class="row g-3 mb-3">
                        <div class="col-md-8">
                            <label class="form-label text-muted small fw-bold">Select Vendor</label>
                            <select class="form-select" id="reqVendor" required>
                                <option value="">Choose...</option>
                                @if (vendors != null)
                                {
                                    foreach (var v in vendors)
                                    {
                                        <option value="@v.Id">@v.VendorName</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label text-muted small fw-bold">Quantity</label>
                            <input type="number" class="form-control" id="reqQty" required min="1">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer border-top-0">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary px-4" id="btnConfirmRequest">Submit Request</button>
            </div>
        </div>
    </div>
</div>

<!-- 2. ✅ INFO MODAL (Displays Data) -->
<div class="modal fade" id="infoModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header bg-info text-white border-0">
                <h5 class="modal-title fw-bold">Pending Request Details</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-0" id="infoModalBody">
                <!-- JS will inject content here -->
                <div class="text-center py-5"><div class="spinner-border text-primary"></div></div>
            </div>
            <div class="modal-footer border-top-0 bg-light">
                <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- 3. ✅ RECEIVE MODAL (With Requested Qty & Date) -->
<div class="modal fade" id="receiveModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header bg-success text-white border-0">
                <h5 class="modal-title fw-bold">📥 Receive Stock</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-4">
                <form id="receiveForm">
                    <input type="hidden" id="recVariantId">

                    <div class="mb-3">
                        <label class="form-label text-muted small fw-bold">Item</label>
                        <div class="form-control-plaintext fw-bold" id="recProductName"></div>
                    </div>

                    <!-- Info Row -->
                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <label class="form-label text-muted small fw-bold">Receive Date</label>
                            <input type="text" class="form-control bg-light" id="recDate" readonly value="@DateTime.Now.ToString("yyyy-MM-dd")">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted small fw-bold">Requested Qty</label>
                            <input type="text" class="form-control bg-light text-primary fw-bold" id="recReqQty" readonly value="...">
                        </div>
                    </div>

                    <!-- Input Row -->
                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <label class="form-label text-muted small fw-bold">Received Qty <span class="text-danger">*</span></label>
                            <input type="number" class="form-control" id="recQty" required min="1">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted small fw-bold">Total Cost <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text">Tk.</span>
                                <input type="number" class="form-control" id="recPrice" required min="0">
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label text-muted small fw-bold">Invoice / Ref No.</label>
                        <input type="text" class="form-control" id="recInvoice" placeholder="Optional">
                    </div>

                    <div class="mb-3">
                        <label class="form-label text-muted small fw-bold">Remarks</label>
                        <textarea class="form-control" id="recRemarks" rows="2" placeholder="Condition, notes..."></textarea>
                    </div>

                </form>
            </div>
            <div class="modal-footer border-top-0 bg-light">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-success px-4" id="btnConfirmReceive">Confirm Receipt</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/inventory.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
}