@model MDUA.Entities.LandingPageViewModel
@{
    ViewData["Title"] = "Home";
    Layout = "_Layout"; 
}

@section Styles {
    <style>
        /* Rokomari-style Layout Tweaks */
        .category-sidebar {
            background: #fff;
            border-right: 1px solid #eee;
            min-height: 400px;
        }

        .category-item {
            padding: 10px 15px;
            border-bottom: 1px solid #f5f5f5;
            color: #333;
            display: block;
            text-decoration: none;
            transition: 0.2s;
        }

            .category-item:hover {
                background-color: #f8f9fa;
                color: #0d6efd;
                padding-left: 20px; /* Slide effect */
            }

        .product-card {
            border: 1px solid #eee;
            transition: all 0.3s ease;
            height: 100%;
        }

            .product-card:hover {
                box-shadow: 0 5px 15px rgba(0,0,0,0.1);
                transform: translateY(-2px);
            }

        .product-img-container {
            height: 200px;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 10px;
            background: #fff;
        }

            .product-img-container img {
                max-height: 100%;
                max-width: 100%;
            }
    </style>
}

<div class="container mt-4">
    <div class="row">

        <div class="col-lg-3 d-none d-lg-block">
            <div class="category-sidebar shadow-sm rounded">
                <div class="p-3 bg-primary text-white rounded-top fw-bold">
                    <i class="fas fa-bars me-2"></i> Categories
                </div>
                @if (Model.Categories.Any())
                {
                    foreach (var cat in Model.Categories)
                    {
                        <a href="/shop?category=@cat.Id" class="category-item">
                            @cat.Name
                            <i class="fas fa-chevron-right float-end text-muted small mt-1"></i>
                        </a>
                    }
                }
                else
                {
                    <div class="p-3 text-muted small">No categories found.</div>
                }
            </div>
        </div>

        <div class="col-lg-9">
            <div class="d-flex justify-content-between align-items-center mb-3 p-3 bg-white shadow-sm rounded">
                <h5 class="mb-0 text-primary fw-bold">Welcome to MDUA Store</h5>
            </div>

            <div id="heroCarousel" class="carousel slide shadow-sm rounded overflow-hidden" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <div style="background-color: #eee; height: 350px; display: flex; align-items: center; justify-content: center;">
                            <div class="text-center">
                                <h2>Big Sale Is On!</h2>
                                <p>Get the best deals on electronics and books.</p>
                                <button class="btn btn-primary">Shop Now</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-5">
        <div class="d-flex justify-content-between align-items-center mb-3 border-bottom pb-2">
            <h4 class="fw-bold text-dark"><i class="fas fa-clock text-warning me-2"></i>New Arrivals</h4>
            <a href="/shop" class="btn btn-sm btn-outline-secondary rounded-pill">View All</a>
        </div>

        <div class="row row-cols-2 row-cols-md-4 row-cols-lg-5 g-3">
            @foreach (var prod in Model.NewArrivals)
            {
                <div class="col">
                    <div class="card product-card h-100">
                        <div class="product-img-container">
                            <img src="@prod.ImageUrl" alt="@prod.Name" onerror="this.src='https://placehold.co/200x200?text=No+Image'">
                        </div>
                        <div class="card-body p-2 d-flex flex-column">
                            <h6 class="card-title text-truncate" title="@prod.Name">@prod.Name</h6>
                            <div class="mt-auto">
                                <p class="text-danger fw-bold mb-1">Tk. @prod.Price.ToString("N0")</p>
                                <button class="btn btn-sm btn-outline-primary w-100" onclick="addToCart(@prod.Id)">
                                    <i class="fas fa-cart-plus"></i> Add
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
            @if (!Model.NewArrivals.Any())
            {
                <div class="col-12 text-center py-5 text-muted">
                    <i class="fas fa-box-open fa-3x mb-3"></i>
                    <p>No products available yet.</p>
                </div>
            }
        </div>
    </div>
</div>