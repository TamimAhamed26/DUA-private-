@model MDUA.Entities.UserLoginResult
@{
    Layout = null;
    ViewData["Title"] = "Login";
    var googleClientId = Environment.GetEnvironmentVariable("GOOGLE_CLIENT_ID");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - MDUA Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/login.css" />
</head>
<body>
    <div class="decorative-shape shape-1"></div>
    <div class="decorative-shape shape-2"></div>
    <div class="login-container">
        <div class="glass-card">
            <div class="brand-icon">M</div>
            <h2 class="fw-bold text-dark mb-1">Welcome Back</h2>
            <p class="text-muted mb-4 small">Enter your credentials to access the dashboard.</p>

            <form method="post" asp-controller="Account" asp-action="LogIn">
                @Html.AntiForgeryToken()

                <div class="form-group mb-3 text-start">
                    <label for="username" class="form-label small fw-bold text-uppercase text-muted ps-1">Username</label>
                    <input type="text" name="username" id="username" class="form-control form-control-glass" placeholder="Enter username" required autocomplete="username" />
                </div>

                <div class="form-group mb-3 text-start">
                    <label for="password" class="form-label small fw-bold text-uppercase text-muted ps-1">Password</label>
                    <div class="password-wrapper position-relative">
                        <input type="password" name="password" id="password" class="form-control form-control-glass" placeholder="••••••••" required autocomplete="current-password" />

                        <button type="button" class="password-toggle btn border-0 p-0 position-absolute top-50 end-0 translate-middle-y me-3"
                                id="togglePassword" style="background:transparent; z-index:5;" aria-label="Toggle password visibility">
                            <span id="eyeIcon" class="text-muted"><i class="fas fa-eye"></i></span>
                        </button>
                    </div>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-4 ps-1 pe-1">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="rememberMe" id="rememberMe">
                        <label class="form-check-label small text-muted user-select-none" for="rememberMe">
                            Remember me
                        </label>
                    </div>

                    <a asp-action="ForgotPassword" asp-controller="Account" class="small text-decoration-none fw-bold text-primary">
                        Forgot Password?
                    </a>
                </div>

                <div class="passkey-section">
                    <hr />
                    <button type="button" id="btnPasskeyLogin" class="btn btn-outline-primary w-100">
                        <i class="bi bi-fingerprint"></i> Sign in with Passkey
                    </button>
                </div>

                <button type="submit" class="btn btn-login w-100 mt-3">
                    Sign In
                </button>
            </form>

            <div class="mt-3 text-center">
                <div class="d-flex align-items-center my-3">
                    <hr class="flex-grow-1" />
                    <span class="px-2 text-muted small">OR</span>
                    <hr class="flex-grow-1" />
                </div>

                <div id="g_id_onload"
                     data-client_id="@googleClientId"
                     data-callback="handleGoogleCallback"
                     data-auto_prompt="false">
                </div>
                <div class="g_id_signin"
                     data-type="standard"
                     data-shape="rectangular"
                     data-theme="outline"
                     data-text="sign_in_with"
                     data-size="large"
                     data-logo_alignment="left"
                     data-width="100%">
                </div>
            </div>
            @if (Model != null)
            {
                <div class="mt-4 pt-3 border-top border-secondary-subtle">
                    @if (Model.IsSuccess)
                    {
                        <div class="alert alert-success d-flex align-items-center p-2 mb-0" role="alert">
                            <span class="fs-5 me-2">✓</span>
                            <div class="small lh-sm text-start"><strong>Login Successful!</strong><br>Redirecting...</div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger d-flex align-items-center p-2 mb-0" role="alert">
                            <span class="fs-5 me-2">✕</span>
                            <div class="small lh-sm text-start"><strong>Access Denied</strong><br>@Model.ErrorMessage</div>
                        </div>
                    }
                </div>
            }
        </div>
        <div class="text-center mt-4 text-muted small opacity-75">
            &copy; @DateTime.Now.Year MDUA System
        </div>
    </div>

    <script src="https://accounts.google.com/gsi/client" async defer></script>

    <script>
        const togglePassword = document.getElementById('togglePassword');
        const passwordInput = document.getElementById('password');
        const eyeIcon = document.getElementById('eyeIcon');

        togglePassword.addEventListener('click', function() {
            const type = passwordInput.type === 'password' ? 'text' : 'password';
            passwordInput.type = type;

            // Switch FontAwesome Classes
            if (type === 'password') {
                eyeIcon.innerHTML = '<i class="fas fa-eye"></i>';
            } else {
                eyeIcon.innerHTML = '<i class="fas fa-eye-slash"></i>';
            }
        });

        // ✅ ADDED: Google Callback Handler
        function handleGoogleCallback(response) {
            // Create a form to POST the credential securely
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = '@Url.Action("GoogleCallback", "Account")';

            // Add Anti-Forgery Token
            const tokenInput = document.createElement('input');
            tokenInput.type = 'hidden';
            tokenInput.name = '__RequestVerificationToken';
            tokenInput.value = document.querySelector('input[name="__RequestVerificationToken"]').value;
            form.appendChild(tokenInput);

            // Add Google Credential
            const credInput = document.createElement('input');
            credInput.type = 'hidden';
            credInput.name = 'credential';
            credInput.value = response.credential;
            form.appendChild(credInput);

            document.body.appendChild(form);
            form.submit();
        }
    </script>
</body>
</html>

<script>
    // --- 1. Base64URL Utility Functions (Required for FIDO2) ---
    const base64url = {
        encode: function(buffer) {
            const bytes = new Uint8Array(buffer);
            let binary = '';
            for (let i = 0; i < bytes.byteLength; i++) {
                binary += String.fromCharCode(bytes[i]);
            }
            return btoa(binary)
                .replace(/\+/g, '-')
                .replace(/\//g, '_')
                .replace(/=/g, '');
        },
        decode: function(base64url) {
            const padding = '='.repeat((4 - base64url.length % 4) % 4);
            const base64 = (base64url + padding)
                .replace(/-/g, '+')
                .replace(/_/g, '/');
            const rawData = atob(base64);
            const outputArray = new Uint8Array(rawData.length);
            for (let i = 0; i < rawData.length; ++i) {
                outputArray[i] = rawData.charCodeAt(i);
            }
            return outputArray;
        }
    };

    // --- 2. Login Event Handler ---
    document.getElementById('btnPasskeyLogin').addEventListener('click', async function(e) {
        e.preventDefault();
        const btn = this;
        const username = document.getElementById('username').value;

        // Visual feedback
        const originalText = btn.innerHTML;
        btn.innerHTML = '<span class="spinner-border spinner-border-sm"></span> check device...';
        btn.disabled = true;

        try {
            // A. Fetch Options from Controller
            const optsResponse = await fetch('/api/Passkey/assertionOptions', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(username) // Send username if you have it, or empty string
            });

            if (!optsResponse.ok) throw new Error("Failed to get assertion options");
            const options = await optsResponse.json();

            // B. Decode binary fields for the Browser
            options.challenge = base64url.decode(options.challenge);
            if (options.allowCredentials) {
                options.allowCredentials.forEach(c => {
                    c.id = base64url.decode(c.id);
                });
            }

            // C. Trigger Browser "Sign In" Prompt
            const credential = await navigator.credentials.get({
                publicKey: options
            });

            // D. Encode response for the Controller
            const assertionResponse = {
                id: credential.id,
                rawId: base64url.encode(credential.rawId),
                type: credential.type,
                extensions: credential.getClientExtensionResults(),
                response: {
                    authenticatorData: base64url.encode(credential.response.authenticatorData),
                    clientDataJSON: base64url.encode(credential.response.clientDataJSON),
                    signature: base64url.encode(credential.response.signature),
                    userHandle: credential.response.userHandle ? base64url.encode(credential.response.userHandle) : null
                }
            };

            // E. Send to Verify Endpoint
            const verifyResponse = await fetch('/api/Passkey/makeAssertion', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(assertionResponse)
            });

            const result = await verifyResponse.json();

            if (verifyResponse.ok && result.success) {
                // F. Success -> Redirect
                window.location.href = result.redirectUrl;
            } else {
                throw new Error(result.message || "Unknown error");
            }

        } catch (err) {
            console.error(err);
            alert("Login Failed: " + err.message);
            btn.innerHTML = originalText;
            btn.disabled = false;
        }
    });
</script>