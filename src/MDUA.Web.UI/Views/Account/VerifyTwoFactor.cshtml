@{
    Layout = null; 
    ViewData["Title"] = "Verify Identity";
}

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow-sm" style="max-width: 400px; width: 100%;">
        <div class="card-body text-center p-4">
            <div class="mb-3">
                <i class="fas fa-shield-alt text-primary" style="font-size: 3rem;"></i>
            </div>
            <h3 class="fw-bold mb-3">Two-Factor Auth</h3>
            <p class="text-muted small mb-4">
                Please enter the 6-digit code from your authenticator app to continue.
            </p>

            <form asp-action="VerifyTwoFactor" method="post">
                @Html.AntiForgeryToken()

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger py-2 small">
                        @Html.ValidationSummary(false, "", new { @class = "mb-0" })
                    </div>
                }

                <div class="form-group mb-4">
                    <input type="text" name="code" class="form-control form-control-lg text-center fw-bold letter-spacing-2"
                           placeholder="000 000" maxlength="6" inputmode="numeric" autocomplete="one-time-code" required autofocus />
                </div>

                <button type="submit" class="btn btn-primary w-100 py-2">Verify</button>
            </form>

            <div class="mt-4 pt-3 border-top">
                <a asp-action="Login" class="text-decoration-none small text-muted">
                    <i class="fas fa-arrow-left me-1"></i> Back to Login
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .letter-spacing-2 {
        letter-spacing: 5px;
        font-size: 1.5rem;
    }
</style>